{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "arrow-return-shorthand": true,
    "ban": [
      true,
      "eval",
      "fit",
      "fdescribe",
      {
        "name": "$",
        "message": "please don't"
      }
    ],
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "component-class-suffix": true,
    "component-selector": [
      true,
      "element",
      "",
      "kebab-case"
    ],
    "curly": true,
    "directive-class-suffix": true,
    "directive-selector": [
      true,
      "attribute",
      "",
      "camelCase"
    ],
    "eofline": true,
    "file-name-casing": [
      true,
      "kebab-case"
    ],
    "forin": true,
    "import-blacklist": [
      true
    ],
    "import-spacing": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [
      true,
      160
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "debug",
      "log",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-inputs-metadata-property": true,
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-outputs-metadata-property": true,
    "no-output-rename": true,    
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-tautology-expression": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-var-keyword": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "groups": [
          {"name":"parent directories", "match": "^\\.\\.", "order": 20},
          {"name":"current directory", "match": "^\\.", "order": 30},
          {"name":"internal libraries", "match": "^~", "order": 15},
          {"name":"external libraries", "match": ".*", "order": 10}          
        ]
      }
    ],
    "prefer-const": true,
    "prefer-switch": [
      true,
      {
        "min-cases": 3
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "space-before-function-paren": [
      true,
      "never"
    ],
    "strict-comparisons": [
      true,
      {
        "allow-string-order-comparison": true
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": true,
    "typedef": [
      true,
      "call-signature",
      "property-declaration",
      "parameter"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "unnecessary-constructor": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-rest-spread",
      "check-separator",
      "check-type"
    ]
  }
}